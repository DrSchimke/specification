{
    "name": "sci/specification",
    "description": "Specification pattern for Doctrine entity repositories.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=5.5.0",
        "doctrine/orm": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.7",
        "squizlabs/php_codesniffer": "^2.3",
        "humbug/humbug": "~1.0@dev"
    },
    "autoload": {
        "psr-4": { 
            "Sci\\Specification\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": { 
            "Sci\\Tests\\Specification\\": "tests/" 
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
